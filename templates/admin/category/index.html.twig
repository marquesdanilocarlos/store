{% extends 'base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Categorias</h1>
            <a href="{{ path('admin_categories_create') }}" class="btn btn-success">Criar Categoria</a>
        </div>
        <hr>
    </div>

    <div class="col-12">
        <table class="table">
            <thead>

                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Criado Em</th>
                    <th>Ações</th>
                </tr>

            </thead>
            <tbody>
                {% for category in categories  %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.createdAt|date("d/m/Y H:i:s") }}</td>
                    <td>
                        <a href="{{ path('admin_categories_edit', {category: category.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                        <a href="{{ path('admin_categories_remove', {category: category.id}) }}" class="btn btn-sm btn-danger">Remover</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
