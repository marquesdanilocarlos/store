{% extends 'base.html.twig' %}

{% block title %}Novo produto{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>Editar Produto</h1>
            <hr>
        </div>
        <div class="col-12">
            <form action="{{ path('admin_update_products', {product: product.id}) }}" method="post">
                <input type="hidden" name="_method" value="put">
                <div class="form-group mb-3">
                    <label for="name">Nome:</label>
                    <input id="name" type="text" class="form-control" name="name" value="{{ product.name }}">
                </div>
                <div class="form-group mb-3">
                    <label for="description">Descrição:</label>
                    <input id="description" type="text" class="form-control" name="description"
                           value="{{ product.description }}">
                </div>
                <div class="form-group mb-3">
                    <label for="body">Conteúdo/Informações:</label>
                    <textarea id="body" class="form-control" name="body">
                        {{ product.body }}
                    </textarea>
                </div>
                <div class="form-group mb-3">
                    <label for="price">Preço</label>
                    <input id="price" type="number" class="form-control" name="price" value="{{ product.price }}">
                </div>

                <div class="form-group">
                    <button class="btn btn-success">Editar Produto</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
