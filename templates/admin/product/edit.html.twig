{% extends 'base.html.twig' %}

{% block title %}Novo produto{% endblock %}

{% block body %}
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h1>Editar Produto</h1>
        <hr>
    </div>
    <div class="col-12">
        {% include 'admin/product/_form.html.twig' %}
        <div class="row">
            <div class="col-12 mt-5">
                <h3>Imagens do Produto</h3>
                <hr>
                <div class="row">
                    {% for photo in productPhotos %}
                        <div class="col-4 mb-3">
                            <img class="img-fluid" src="{{ '/uploads/products/'~photo.photo }}"
                                 alt="{{ photo.photo }}"/>
                            <form method="post" action="{{ path('admin_product_photo_remove', {'productPhoto': photo.id}) }}">
                                <input type="hidden" name="_method" value="delete">
                                <button class="btn btn-sm btn-danger">Remover</button>
                            </form>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
